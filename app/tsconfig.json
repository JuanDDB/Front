{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es2017",
        "jsx": "react",
        "lib": ["es6", "es2015", "es2017", "dom"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "./src/**/*"
    ]
}